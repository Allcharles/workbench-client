{
  "fields": [
    {
      "key": "name",
      "type": "input",
      "templateOptions": {
        "label": "Site Name",
        "required": true
      }
    },
    {
      "key": "description",
      "type": "textarea",
      "templateOptions": {
        "label": "Description",
        "required": false,
        "rows": 8
      }
    },
    {
      "key": "location",
      "validators": {
        "fieldMatch": {
          "expression": "return ((control.value.customLatitude && control.value.customLongitude) || (!control.value.customLatitude && !control.value.customLongitude))",
          "message": "Both latitude and longitude must be set or left empty",
          "errorPath": "customLongitude"
        }
      },
      "fieldGroup": [
        {
          "key": "customLatitude",
          "type": "input",
          "templateOptions": {
            "label": "Latitude",
            "type": "number",
            "required": false
          }
        },
        {
          "key": "customLongitude",
          "type": "input",
          "templateOptions": {
            "label": "Longitude",
            "type": "number",
            "required": false
          }
        }
      ]
    },
    {
      "key": "image",
      "type": "image",
      "templateOptions": {
        "label": "Image",
        "required": false
      }
    },
    {
      "key": "timezoneInformation",
      "type": "timezone",
      "templateOptions": {
        "label": "Time Zone",
        "required": false
      }
    }
  ]
}
